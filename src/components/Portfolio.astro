---
import '../styles/portfolio.css';
let projects=[
    {
        id:1,
        name:'Hotel',
        subtitle:'',
        photo1:'https://dynamic-media-cdn.tripadvisor.com/media/photo-o/0f/ba/29/5c/img-worlds-of-adventure.jpg?w=1200&amp;h=1200&amp;s=1',
        tech:'javascript',
        desc:'is a hotel',
        github:'asd.com',
        page:''
    },
];
---
<div id="portfolio">
    <div class="textAbout">
        <h2 >PROJECTS</h2>
        <i class="bi bi-arrow-bar-down"></i>
    </div>
    <div class="containerProjects">
    
        {projects.map((project) => 
        <div class="card  text-black m-5 ">
            <img class="card-img" src={project.photo1}/>
            <div class="card-img-overlay">
                <d class="card-title">{project.name}</d>
                <p class="card-text mb-5">{project.tech}</p>
                <button class="btn btn-outline-success" id="btnPortfolio" value={project.id}>LEARN MORE</button>
            </div>
        </div>
        )}

      </div>

      <!-- modal portfolio -->
      <div class="modal fade " id="modal"  aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog  modal-fullscreen-sm-down" >
          <div class="modal-content ">
            <div class="modal-header">
                <div id="carousel" class="carousel slide " data-bs-ride="carousel" >

                    <!-- Indicators/dots -->
                    <div class="carousel-indicators">
                      <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active"></button>
                      <button type="button" data-bs-target="#carousel" data-bs-slide-to="1"></button>
                      <button type="button" data-bs-target="#carousel" data-bs-slide-to="2"></button>
                    </div>
                    
                    <!-- The slideshow/carousel -->
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img class="imgProjects" src="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/0f/ba/29/5c/img-worlds-of-adventure.jpg?w=1200&amp;h=1200&amp;s=1" alt="New York" class="d-block" >
                      </div>
                      <div class="carousel-item">
                        <img class="imgProjects" src="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/0f/ba/29/5c/img-worlds-of-adventure.jpg?w=1200&amp;h=1200&amp;s=1" alt="New York" class="d-block" >
                      </div>
                      <div class="carousel-item">
                        <img class="imgProjects" src="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/0f/ba/29/5c/img-worlds-of-adventure.jpg?w=1200&amp;h=1200&amp;s=1" alt="New York" class="d-block" >
                      </div>
                    </div>
                    
                    <!-- Left and right controls/icons -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
                      <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
                      <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
            </div>
            <div class="modal-body">
              <h1>App title</h1>
              <h4>subtitle</h4>
              <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Dolorem totam nisi pariatur eos quibusdam laudantium, </p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Visit Github <i class="bi bi-github"></i></button>
              <button type="button" class="btn btn-success  me-auto">Web page <i class="bi bi-box-arrow-up-right"></i></button>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
          </div>
        </div>
      </div>
</div>
<!-- Carousel -->

